<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CommitmentActivity">

    <TextView
        android:id="@+id/com_act_title"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commitment"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commitmentRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_commitment"
        android:layout_below="@+id/com_act_title"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="14dp"
        android:paddingTop="6dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/add_commitment"
        android:text="Add Commitments"
        android:textColor="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_bg"
        tools:ignore="HardcodedText"
        android:layout_margin="10dp"/>

</RelativeLayout>
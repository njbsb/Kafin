<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_saving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/saving_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#e7cfc8"
                android:padding="20dp"
                android:src="@drawable/ic_analytics"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_below="@id/saving_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp">
                <TextView
                    android:id="@+id/saving_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target: RM 300"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_margin="10dp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/saving_period"
                    android:text="20/11/2020 to 20/12/2020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/saving_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 month"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/saving_analytic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analytics"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"
                    android:layout_margin="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Daily Expense"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/analytic_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 6"
                    android:textSize="28sp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Monthly Expense"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/analytic_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 180"
                    android:textSize="28sp"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Saved"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/analytic_totalSaved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RM 260"
                    android:textSize="28sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/home_title"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_title">
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Khairul Anuar!"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/home_month_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Income"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/home_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="RM3000"
                        tools:ignore="HardcodedText"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saving Goal"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/home_saving_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="RM300"
                        tools:ignore="HardcodedText"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center_horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="240dp"
                app:cardCornerRadius="12dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_green_light"
                    android:padding="6dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saving Plan"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        tools:ignore="HardcodedText"
                        android:layout_marginBottom="4dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="20/10/2020"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText"
                        android:background="@drawable/round_button_white"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="to"
                        android:layout_margin="2dp"
                        tools:ignore="HardcodedText" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="21/10/2020"
                        android:textAllCaps="false"
                        tools:ignore="HardcodedText"
                        android:background="@drawable/round_button_white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="300dp"
                app:cardCornerRadius="12dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#d4b359"
                    android:padding="6dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:text="Commitments"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText"
                        android:layout_marginBottom="6dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commitment_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Button
            android:id="@+id/btn_add_commitment"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Add Commitment"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@drawable/round_button_yellow"
            tools:ignore="HardcodedText"
            android:layout_gravity="center_horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</RelativeLayout>